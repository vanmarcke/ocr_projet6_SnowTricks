{% extends 'base.html.twig' %}

{% block title %}{% trans %}Reset your password{% endtrans %}
{% endblock %}

{% block body %}

	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<!-- ======= Hero Section form ======= -->
	<section id="hero">
		<div class="hero-container" data-aos="fade-up">

			<div class="section-title">
				<h1>{% trans %}Reset your password{% endtrans %}</h1>
			</div>

			<div class="col-lg-4 text-white text-left font-weight-bold">

				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div>
					<small>
						{% trans %}Enter your email address and we'll send you a link to reset your password.{% endtrans %}
					</small>
				</div>

				<div class="blockcenter">
					<button class="btn btn-primary">{% trans %}Reset your password{% endtrans %}</button>
					{{ form_end(requestForm) }}
				</div>
			</div>
		</div>
	</section>
	<!-- End Hero -->
	<main id="main"></main>
{% endblock %}
