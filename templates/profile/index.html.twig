{% extends 'base.html.twig' %}

{% block title %}Modifier le Profil
{% endblock %}


{% block body %}

	<!-- ======= Hero Section form ======= -->
	<section id="heronewfigure">
		<div id="portfolio" class="hero-container" data-aos="fade-up">

			<div class="section-title">
				<h1>Modifier votre Profil</h1>
			</div>

			
			<p class="text-white font-weight-bold">{{ user.username }} . Votre Avatar actuel :</p>
			{% if user.avatar is empty %}
				<img src="/img/avatardefaut.jpg" class="img-fluid">
			{% else %}
				<img src="{{ user.avatar }}" class="img-fluid">
			{% endif %}

			<div class="col-lg-4 text-white text-left font-weight-bold mt-3">

			<div class="text-white text-center font-weight-bold">
				<p>*Champs Obligatoires pour valider les changements</p>
			</div>

				{{ form_start(form) }}
				{{ form_row(form.newavatar, {
                label: 'Enregistrer un nouvel avatar :' }) }}

				{{ form_row(form.newpseudo, {
                label: 'Enregistrer un nouveau Pseudo :' }) }}

				{{ form_row(form.passwordold, {
                label: 'Votre Mot de passe actuel* :' }) }}

				{{ form_row(form.newpassword.pass, {
                label: 'Enregistrer un nouveau Mot de passe :' }) }}

				{{ form_row(form.newpassword.confirm, {
                label: 'Confirmer le nouveau Mot de passe :' }) }}
				



				<button type="submit" class="btn-primary">Enregistrer</button>

				{{ form_end(form) }}
				
			</div>
		</div>
	</section>
